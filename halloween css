/* ========================================
   HALLOWEEN THEME OVERRIDE FOR CARPOOL HOMEPAGE

   Usage: Paste this entire file into Avada → Theme Options → Custom CSS

   To activate Halloween theme: Add this CSS
   To deactivate: Remove this CSS from Custom CSS field

   Without this CSS, the page will display the professional
   neutral theme with light gray backgrounds and maroon accents.
   ======================================== */

/* Halloween Color Variables Override */
:root {
  /* Halloween color palette */
  --accent: #ff6b00 !important; /* Bright Halloween orange */
  --accent-light: #ff8c00 !important;
  --accent-gradient: linear-gradient(135deg, #ff6b00 0%, #ff8c00 100%) !important;
  --bg: #1a0a2e !important; /* Deep dark purple */
  --text: #ffffff !important;
  --muted: #b8a4c9 !important;
  --muted-accessible: #9d88b3 !important;
  --card: #2d1b4e !important;

  /* BOLD Halloween gradients */
  --gradient-primary: linear-gradient(135deg, #ff6b00 0%, #ff8c00 50%, #ffa500 100%) !important;
  --gradient-soft: linear-gradient(135deg, rgba(255,107,0,0.9) 0%, rgba(138,43,226,0.4) 100%) !important;
  --gradient-mesh: radial-gradient(at 20% 30%, rgba(255,107,0,0.4) 0, transparent 40%),
                   radial-gradient(at 80% 20%, rgba(138,43,226,0.5) 0, transparent 45%),
                   radial-gradient(at 40% 80%, rgba(255,140,0,0.35) 0, transparent 40%),
                   radial-gradient(at 90% 70%, rgba(75,0,130,0.4) 0, transparent 45%),
                   linear-gradient(135deg, #0f0520 0%, #1a0a2e 50%, #2d1550 100%) !important;

  /* Spooky Halloween shadows with glow */
  --shadow-sm: 0 1px 2px rgba(0,0,0,.3), 0 1px 4px rgba(138,43,226,.2) !important;
  --shadow: 0 4px 6px -1px rgba(0,0,0,.4), 0 2px 4px -1px rgba(138,43,226,.3) !important;
  --shadow-md: 0 10px 15px -3px rgba(0,0,0,.5), 0 4px 6px -2px rgba(255,107,0,.3) !important;
  --shadow-lg: 0 20px 25px -5px rgba(0,0,0,.6), 0 10px 10px -5px rgba(138,43,226,.4) !important;
  --shadow-xl: 0 25px 50px -12px rgba(0,0,0,.8) !important;
  --shadow-colored: 0 8px 32px -8px rgba(255,107,0,.6), 0 0 40px rgba(138,43,226,.4) !important;

  --text-heading: #ffffff !important;
  --text-secondary: #b8a4c9 !important;
  --ring: rgba(255, 107, 0, 0.5) !important;
}

/* Force dark background with mesh gradient on landing section */
.carpool-landing {
  background: var(--bg) !important;
  background-image: var(--gradient-mesh) !important;
  background-size: cover !important;
  background-repeat: no-repeat !important;
  background-attachment: fixed !important;
  color: var(--text) !important;
}

/* Force dark background on html/body when landing page is present */
@supports selector(:has(*)) {
  html:has(.carpool-landing),
  body:has(.carpool-landing) {
    background: var(--bg) !important;
    background-image: var(--gradient-mesh) !important;
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-attachment: fixed !important;
  }
}

